        },
        {
          "image":  "/arquivos/735-9_ecommerce_meio-2-banner_700x280_v1.png",
          "mobileImage": "/arquivos/735-9_ecommerce_meio-2-mobile_360x245_v1.png",
          "width": "100%"
        }       
